APP=retropad_macos
SRC=retropad_mac.m
OUTDIR=binaries
TARGET=$(OUTDIR)/$(APP)
CFLAGS=-Wall -Wextra -fobjc-arc
FRAMEWORKS=-framework Cocoa -framework UniformTypeIdentifiers

all: $(TARGET)

$(TARGET): $(SRC)
	mkdir -p $(OUTDIR)
	clang $(CFLAGS) $(SRC) $(FRAMEWORKS) -o $(TARGET)

run: $(TARGET)
	./$(TARGET)

clean:
	rm -f $(TARGET)

.PHONY: all run clean
